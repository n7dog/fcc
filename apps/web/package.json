{
	"name": "web",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --host --open",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "npx playwright test tests",
		"test:ui": "playwright test --ui",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"fresh": "rm -rf node_modules .svelte-kit playwright-report test-results .unlighthouse && npm i && npm run format",
		"fresh:start": "npm run fresh && npm run dev",
		"unlighthouse": "npx unlighthouse --site fcccanada.ca",
		"unlighthouse:dev": "npx unlighthouse --site dev.fcccanada.ca"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.5.1",
		"@iconify/svelte": "^3.1.4",
		"@js-temporal/polyfill": "^0.4.4",
		"@sanity/client": "^6.11.1",
		"@skeletonlabs/skeleton": "^2.7.1",
		"@skeletonlabs/tw-plugin": "^0.3.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-vercel": "^5.1.0",
		"@sveltejs/kit": "^2.0.0",
		"@tailwindcss/forms": "^0.5.6",
		"@types/node": "^20.11.5",
		"autoprefixer": "^10.4.17",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.0.2",
		"nodemailer": "^6.9.7",
		"postcss": "^8.4.31",
		"postcss-load-config": "^5.0.2",
		"prettier": "^3.2.4",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.7",
		"svelte": "^4.2.9",
		"svelte-check": "^3.6.3",
		"svelte-icons": "^2.1.0",
		"svelte-preprocess": "^5.1.1",
		"svelte-sequential-preprocessor": "^2.0.1",
		"svelte-youtube-embed": "^0.2.1",
		"tailwindcss": "^3.3.5",
		"typescript": "^5.3.2",
		"ui": "*",
		"vite": "^5.0.12",
		"vite-plugin-tailwind-purgecss": "^0.2.0",
		"vitest": "^1.0.0"
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	},
	"devDependencies": {
		"@playwright/test": "^1.40.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/nodemailer": "^6.4.14"
	}
}
