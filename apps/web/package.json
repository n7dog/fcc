{
	"name": "web",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --host --open",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "npx playwright test tests",
		"test:ui": "playwright test --ui",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"fresh": "rm -rf node_modules .svelte-kit playwright-report test-results .unlighthouse && npm i && npm run format",
		"fresh:start": "npm run fresh && npm run dev",
		"unlighthouse": "npx unlighthouse --site fcccanada.ca",
		"unlighthouse:dev": "npx unlighthouse --site dev.fcccanada.ca"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.5.1",
		"@iconify/svelte": "^3.1.4",
		"@js-temporal/polyfill": "^0.4.4",
		"@playwright/test": "^1.38.0",
		"@sanity/client": "^6.4.12",
		"@skeletonlabs/skeleton": "^2.1.0",
		"@skeletonlabs/tw-plugin": "^0.2.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-vercel": "^3.0.3",
		"@sveltejs/kit": "^1.25.0",
		"@tailwindcss/forms": "^0.5.6",
		"@types/node": "^20.5.9",
		"autoprefixer": "^10.4.15",
		"eslint": "^8.48.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"postcss": "^8.4.29",
		"postcss-load-config": "^4.0.1",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.4",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.1",
		"svelte-icons": "^2.1.0",
		"svelte-preprocess": "^5.0.4",
		"svelte-sequential-preprocessor": "^2.0.1",
		"svelte-youtube-embed": "^0.2.1",
		"tailwindcss": "^3.3.3",
		"typescript": "^5.2.2",
		"ui": "*",
		"vite": "^4.4.9",
		"vite-plugin-tailwind-purgecss": "^0.1.3",
		"vitest": "^0.34.3"
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	}
}
